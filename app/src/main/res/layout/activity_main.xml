<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rahulkumar.sudoku.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <GridView
            android:id="@+id/myGridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e5e5e5"
            android:horizontalSpacing="2dp"
            android:numColumns="9"
            android:verticalSpacing="2dp" />
    </LinearLayout>

    <Button
        android:id="@+id/auto_solve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/roundbutton"
        android:text="auto_Solve"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/new_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/roundbutton"
        android:text="New Game"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_toEndOf="@+id/new_game_button"
        android:layout_toRightOf="@+id/new_game_button"
        android:background="@drawable/roundbutton"
        android:text="1"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button_1"
        android:layout_toRightOf="@+id/button_1"
        android:background="@drawable/roundbutton"
        android:text="2"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />

    <Button
        android:id="@+id/button_3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button_2"
        android:layout_toRightOf="@+id/button_2"
        android:background="@drawable/roundbutton"
        android:text="3"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />

    <Button
        android:id="@+id/button_4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button_3"
        android:layout_toRightOf="@+id/button_3"
        android:background="@drawable/roundbutton"
        android:text="4"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />

    <Button
        android:id="@+id/button_5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button_4"
        android:layout_toRightOf="@+id/button_4"
        android:background="@drawable/roundbutton"
        android:text="5"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />


    <Button
        android:id="@+id/button_6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/button_2"
        android:layout_toLeftOf="@+id/button_7"
        android:layout_toStartOf="@+id/button_7"
        android:background="@drawable/roundbutton"
        android:text="6"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />

    <Button
        android:id="@+id/button_7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/button_2"
        android:layout_toLeftOf="@+id/button_8"
        android:layout_toStartOf="@+id/button_8"
        android:background="@drawable/roundbutton"
        android:text="7"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />


    <Button
        android:id="@+id/button_8"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/button_3"
        android:layout_toLeftOf="@+id/button_9"
        android:layout_toStartOf="@+id/button_9"
        android:background="@drawable/roundbutton"
        android:text="8"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />

    <Button
        android:id="@+id/button_9"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/button_5"
        android:layout_alignRight="@+id/button_5"
        android:layout_below="@+id/button_4"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/roundbutton"
        android:text="9"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />

</RelativeLayout>
